{% extends 'template.back.html.twig' %}

{% block title %}Section index{% endblock %}

{% block CrudSection %}
<div class="container section-title" data-aos="fade-up">
  <div class="row justify-content-center">
     <div class="col-8 align-items-center justify-content-center mt-5">
    <h1>Section index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>SectionTitle</th>
                <th>SectionDescription</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for section in sections %}
            <tr>
                <td>{{ section.id }}</td>
                <td>{{ section.sectionTitle }}</td>
                <td>{{ section.sectionDescription }}</td>
                <td>
                    <a href="{{ path('app_admin_section_show', {'id': section.id}) }}">show</a>
                    <a href="{{ path('app_admin_section_edit', {'id': section.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_admin_section_new') }}">Create new</a>
        </div>
    </div>
</div>
{% endblock %}
